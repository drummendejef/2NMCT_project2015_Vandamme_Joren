<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Overzicht$PlaceholderFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtviewAantalKledingstukken"
        android:id="@+id/textViewAantalKledingstukken"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/txtViewAantalKledingstukkenResult"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtViewAantalPlaatsen"
        android:id="@+id/txtViewAantalPlaatsen"
        android:layout_below="@+id/textViewAantalKledingstukken"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/txtViewAantalPlaatsenResult"
        android:layout_alignTop="@+id/txtViewAantalPlaatsen"
        android:layout_toEndOf="@+id/txtViewAantalPlaatsen" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnOverzichtKledij"
        android:id="@+id/btnKledijOverzicht"
        android:layout_below="@+id/txtViewAantalPlaatsen"
        android:layout_alignParentStart="true"
        android:layout_marginTop="95dp"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
